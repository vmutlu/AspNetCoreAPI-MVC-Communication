@model List<CategoryDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>Kategori Listeleme Ekranı</h1>
<a asp-action="Create"><button class="btn btn-success btn-sm">Kategori Ekle</button></a> <br /><hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                <a asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>

                </td>
            </tr>
        }
    </tbody>
</table>

