@model List<ProductDTO>
@{
    ViewData["Title"] = "Index";
}


<h1>Ürün Listeleme Ekranı</h1>
<a asp-action="Create"><button class="btn btn-success btn-sm">Ürün Ekle</button></a>
<br />
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Stok Adeti</th>
            <th>Fiyatı</th>
            <th>Kategorisi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Stock</td>
                <td>@item.Price</td>
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>

                </td>
            </tr>
        }
    </tbody>
</table>

